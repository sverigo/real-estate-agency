@using real_estate_agency.Models.ViewModels;
@model UserLoginViewModel

@{
    Layout = "~/Views/Shared/header.cshtml";
}

<div class="container-fluid py-3">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center mb-4">Вход</h3>
                @Html.ValidationSummary(false)
                <fieldset>
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnURL" value="@ViewBag.returnURL" />
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.LoginOrEmail, new { @class = "form-control input-lg", placeholder = "Введите логин или email" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control input-lg", placeholder = "Введите пароль" })
                        </div>
                        <input class="btn btn-lg btn-primary btn-block" value="Войти" type="submit">
                    }
                    @Html.ActionLink("Восстановление пароля", "PasswordResetRequest", "Account", new { @class = "reset-password-string" })
                </fieldset>
            </div>
        </div>
    </div>
</div>
