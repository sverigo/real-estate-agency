@using real_estate_agency.Resources;
@model string
@{
    Layout = "~/Views/Shared/header.cshtml";
}

<div class="container-fluid py-3">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center mb-4">@Resource.PasswordRecovery</h3>
                <div class="alert alert-info">
                    @Resource.PasswordRecoveryMessage
                </div>
                @Html.ValidationSummary(false)
                <fieldset>
                    @using (Html.BeginForm("PasswordResetRequest", "Account", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.TextBox("Email", null, new { @class = "form-control input-lg", @placeholder = Resource.InputEmail })
                        </div>
                        <input class="btn btn-lg btn-primary btn-block" value=@Resource.Send type="submit">
                    }
                </fieldset>
            </div>
        </div>
    </div>
</div>