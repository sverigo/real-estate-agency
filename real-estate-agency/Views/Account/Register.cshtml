@model real_estate_agency.Models.ViewModels.UserRegisterViewModel
@{
    Layout = "~/Views/Shared/header.cshtml";
}

<div class="container-fluid py-3">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center mb-4">Регистрация</h3>
                @Html.ValidationSummary(false)
                <fieldset>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Login, new { @class = "form-control input-lg", placeholder = "Введите логин" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control input-lg", placeholder = "Введите имя" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control input-lg", placeholder = "Введите email" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control input-lg", placeholder = "Введите пароль" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control input-lg", placeholder = "Подтвердите пароль" })
                        </div>
                        <input class="btn btn-lg btn-primary btn-block" value="Зарегистрироваться" type="submit">
                    }
                </fieldset>
            </div>
        </div>
    </div>
</div>
