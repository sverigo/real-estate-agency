@using real_estate_agency.Models.ViewModels;
@using real_estate_agency.Resources;
@model UserRegisterViewModel

@{
    Layout = "~/Views/Shared/header.cshtml";
}

<div class="container-fluid py-3">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center mb-4">@Resource.AddModerator</h3>
                @Html.ValidationSummary(false)
                <fieldset>
                    @using (Html.BeginForm("CreateModerator", "Admin", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Login, new { @class = "form-control input-lg", placeholder = Resource.InputLogin })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control input-lg", placeholder = Resource.InputName })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control input-lg", placeholder = Resource.InputEmail })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control input-lg", placeholder = Resource.InputPassword })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control input-lg", placeholder = Resource.ConfirmPassword })
                        </div>
                        <input class="btn btn-lg btn-primary btn-block" value=@Resource.AddButton type="submit">
                    }
                </fieldset>
            </div>
        </div>
    </div>
</div>
