@using real_estate_agency.Models.ViewModels;
@model MarksViewModel

@if (!Model.IsMarkedByUser)
{
    @Ajax.ActionLink(" ", "SetMark", "Ads", new { id = Model.AdId }, new AjaxOptions { UpdateTargetId = "marks-" + Model.AdId }, new
    {
        @class = "non-active-mark"
    })
}
else
{
    @Ajax.ActionLink(" ", "RemoveMark", "Ads", new { id = Model.AdId }, new AjaxOptions { UpdateTargetId = "marks-" + Model.AdId }, new
    {
        @class = "active-mark"
    })
}
