@using real_estate_agency.Models.ViewModels;
@model MainPageViewModel

@{
    Layout = "~/Views/Shared/header.cshtml";
}
<link href="@Url.Content("~/Content/PagedList.css")" rel="stylesheet" type="text/css" />

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="parser-block">
                @using (Html.BeginForm("Click", "Home"))
                {
                    <input type="submit" value="TBA Parser" class="btn btn-default" />
                }
                <div class="filters">
                    @using (Ajax.BeginForm("AdFilter", "Home", null, new AjaxOptions { UpdateTargetId = "results" }))
                    {
                        <div class="filter quantity">
                            <input type="text" name="MinQuantity" placeholder="Цена от" />
                            <input type="text" name="MaxQuantity" placeholder="Цена до" />
                            <!--<input checked="checked" type="radio" id="currencyUAH" name="Currency" value="грн" />
                            <label for="currencyUAH">UAH</label>
                            <input type="radio" name="Currency" id="currencyUSD" value="$" />
                            <label for="currencyUSD">USD</label>
                            <input type="radio" name="Currency" id="currencyEUR" value="€" />
                            <label for="currencyEUR">EUR</label>-->
                        </div>
                        <div class="filter rooms">
                            <input type="text" name="MinRoomsCount" placeholder="Комнат от" />
                            <input type="text" name="MaxRoomsCount" placeholder="Комнат до" />
                        </div>
                        <div class="filter area">
                            <input readonly type="text" name="MinArea" placeholder="Площадь от" />
                            <input readonly type="text" name="MaxArea" placeholder="Площадь до" />
                        </div>
                        <div class="filter floors">
                            <input type="text" name="MinFloor" placeholder="Этажность от" />
                            <input type="text" name="MaxFloor" placeholder="Этажность до" />
                        </div>

                        <input type="text" name="author" />
                        <input type="submit" value="Search" />
                    }
                </div>
            </div>
            <div class="block col-md-12">
                <div id="results" class="row">
                    @{Html.RenderAction("AdFilter");}
                </div>
            </div>
        </div>
    </div>
</main>
@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
