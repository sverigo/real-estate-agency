@using Microsoft.AspNet.Identity;
@model PagedList.IPagedList<real_estate_agency.Models.Ad>
@using PagedList.Mvc


@{
    Layout = "~/Views/Shared/header.cshtml";
}
<link href="@Url.Content("~/Content/PagedList.css")" rel="stylesheet" type="text/css" />

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="parser-block">
                @using (Html.BeginForm("Click", "Home"))
                {
                    <input type="submit" value="TBA Parser" class="btn btn-default" />
                }
            </div>
            <div class="block col-md-12">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        var src = item.PrevImage;
                        if (item.PrevImage == null)
                        {
                            src = "../Content/images/nophoto.png";
                        }
                        <div class="box col-md-6">
                            @Html.ActionLink(" ", "Edit", "Ads", new { id = item.Id, returnUrl = HttpContext.Current.Request.Url.PathAndQuery }, new { @class = "edit" })
                            @Html.ActionLink(" ", "Remove", "Ads", new { id = item.Id, returnUrl = HttpContext.Current.Request.Url.PathAndQuery }, new { @class = "remove" })
                            <p class="title">@item.Title</p>
                            <div class="row">
                                <div class="img-box">
                                    <img src="@src">
                                </div>
                                <div class="text-box">
                                    <p><strong>Тип:</strong> @item.Type</p>
                                    <p><strong>Адрес:</strong> @item.Address</p>
                                    <p><strong>Стоимость:</strong> @item.Value @item.Currency</p>
                                    <p>@Html.ActionLink("Подробнее", "Details", "Ads", new { id = item.Id, returnUrl = HttpContext.Current.Request.Url.PathAndQuery }, new { @class = "" })</p>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="pagesSwitch">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
   {
       LinkToFirstPageFormat = "<<",
       LinkToPreviousPageFormat = "Назад",
       LinkToNextPageFormat = "Вперед",
       LinkToLastPageFormat = ">>"
   })
    </div>
</main>
@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
