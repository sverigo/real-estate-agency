@model PagedList.IPagedList<real_estate_agency.Models.Ad>
@using PagedList.Mvc


@{
    Layout = "~/Views/Shared/header.cshtml";
}
<link href="@Url.Content("~/Content/PagedList.css")" rel="stylesheet" type="text/css" />


   <main>
    <div class="container-fluid">
        <div class="row">
            <div class="parser-block">
                @using (Html.BeginForm("Click", "Home"))
                {
                    <input type="submit" value="TBA parser" class="btn btn-default" />
                }
            </div>
            <div class="block col-md-12">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="box col-md-6">
                            <p class="title">@item.Title</p>
                            <div class="row">
                                <div class="img-box">
                                    <img src="~/Content/images/ex-1.jpg">
                                </div>
                                <div class="text-box">
                                    <p>Тип: @item.Type</p>
                                    <p>Адрес: @item.Address</p>
                                    <p>Стоимость: @item.Value</p>
                                    <p><a href="/Home/Details/@item.Id">Подробнее</a></p>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="pagesSwitch">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
        { LinkToFirstPageFormat = "<<", LinkToPreviousPageFormat = "Назад",
        LinkToNextPageFormat = "Вперед", LinkToLastPageFormat = ">>"})
    </div>
</main>
@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
