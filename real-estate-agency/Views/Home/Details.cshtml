@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <style>
        #map{
            height: 500px;
            width: 800px;
            background-color: gray;
        }
    </style>
    <script src="~/Scripts/mapInitialize.js"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDs0eQvxU2jsqf71-Smlevn-NsX8W_V74g&callback=initMap"></script>
</head>
<body>
    <div>
        <h3>Подробности</h3>
        <table>
            @foreach (var item in ViewBag.Ads)
            {
                <tr><p>ID @item.Id</p></tr>
                    <tr><p>@item.Title</p></tr>
                    <tr><p>@item.Type</p></tr>
                    <tr><p>Address <span id="Address">@item.Address</span></p></tr>
                    <tr><p>Area: @item.Area</p></tr>
                    <tr><p>Latitude: @item.Latitude</p></tr>
                    <tr><p>Longitude: @item.Longitude</p></tr>
                    <tr><p>@item.Author</p></tr>
                    <tr><p>Этаж: @item.Floors из @item.FloorsCount</p></tr>
                    <tr><p>Комнат: @item.RoomsCount</p></tr>
                    <tr><p>Value: @item.Value</p></tr>
                    <tr><p>@item.Details</p></tr>
                foreach (var i in ViewBag.ImgItems)
                {
                   <img width="150px" height="100px" src='@i' />
                }

                foreach (var i in ViewBag.PhoneItems)
                {
                    <p>@i</p>
                }

                    <tr><div id="map"></div></tr>
            }
        </table>
    </div>
</body>
</html>
