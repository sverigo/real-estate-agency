@using real_estate_agency.Models.ViewModels;
@using real_estate_agency.Resources;
@model BlockUserViewModel

@{
    Layout = "~/Views/Shared/header.cshtml";
}

<div class="container-fluid py-3">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center mb-4">@Resource.BlockUser</h3>
                @Html.ValidationSummary(false)
                <fieldset>
                    @using (Html.BeginForm("BlockUser", "Moderator", null, FormMethod.Post))
                    {
                        @Html.HiddenFor(x => x.UserId)
                         <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                        <div class="form-group">
                            @Html.TextAreaFor(x => x.Message, new { @class = "form-control input-lg", placeholder = Resource.InputBlockReason })
                        </div>
                        <div class="form-group">
                            @Html.EnumDropDownListFor(x => x.Duration, new { @class = "form-control input-lg" })
                        </div>
                        <input class="btn btn-lg btn-primary btn-block" value=@Resource.Block type="submit">
                    }
                </fieldset>
            </div>
        </div>
    </div>
</div>

