@using real_estate_agency.Models;
@model IEnumerable<Payment>
<div>
    <h2>Платежи</h2>
    @if ((Model?.Count() ?? 0) == 0)
    {
        <h2>У вас нет платежей</h2>
    }
    else
    {
        foreach (Payment payment in Model)
        {
            <div>
                <div>@payment.Date</div>
                <div>Длительность подписки (дни): @payment.Days</div>
                @if(payment.ConfirmedDate != null)
                {
                    <div>@payment.ConfirmedDate - Платеж подтвержден.</div>
                }
                else
                {
                    <div>Платеж пока не подтвержден.</div>
                }
            </div>
            <hr />
        }
    }
</div>


