@using real_estate_agency.Models;
@using real_estate_agency.Resources;
@model IEnumerable<Payment>

<h4 class="text-center mb-5">@Resource.MyPayments</h4>

<div class="col-md-6 mx-auto">
    @if ((Model?.Count() ?? 0) == 0)
    {
        <p style="text-align: center;">@Resource.NoPayments</p>
    }
    else
    {
        foreach (Payment payment in Model)
        {
            <div>
                <div class="payment-date">@payment.Date</div>
                <div class="peyment-days">@Resource.SubDuration: @payment.Days</div>
                @if (payment.ConfirmedDate != null)
                {
                    <div class="payment-confirmation">@payment.ConfirmedDate - @Resource.PaymentConfirmed.</div>
                }
                else
                {
                    <div class="payment-confirmation">@Resource.PaymentNotConfirmed.</div>
                }
            </div>
            <hr />
        }
    }
</div>


