@using real_estate_agency.Models.ViewModels;
@using real_estate_agency.Resources;
@model ChangePasswordViewModel

<h4 class="text-center mb-5">@Resource.ChangePassword</h4>

<div class="col-md-6 mx-auto">
    @Html.ValidationSummary(false)
    <fieldset>
        @using (Ajax.BeginForm("ChangePassword", "Cabinet", null, new AjaxOptions { UpdateTargetId = "change-password" }))
        {
            if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div class="success-message">@ViewBag.SuccessMessage</div>
            }
            @Html.HiddenFor(x => x.IdPassword)
            <div class="form-group">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control input-lg", @placeholder = Resource.CurrentPassword })
            </div>
            <div class="form-group">
                @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control input-lg", @placeholder = Resource.NewPassword })
            </div>
            <div class="form-group">
                @Html.PasswordFor(x => x.ConfirmNewPassword, new { @class = "form-control input-lg", @placeholder = Resource.ConfirmNewPassword })
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">@Resource.ChangeButton</button>
        }
    </fieldset>
</div>